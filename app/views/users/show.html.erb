<h1> <%= @user.first_name %>'s Account Page </h1>

<h3><%= @user.first_name %>'s Projects</h3>
<% @user.projects.each do |project| %>
  <%= link_to "#{project.title}", project_path(project) %>
<% end %>

<h3><%= @user.first_name %> has backed <%= "#{@user.projects_backed.length}" %> projects, totaling <%= "#{}" %> dollars of donations! </h3>

<ul>
  <% @user.pledges.each do |pledge| %>
    <li>Project Name: <%= link_to "#{pledge.project.title}", project_path(pledge.project) %> </li>
    <li>Dollars Donated: <%= pledge.dollar_amount %> </li><br>
  <% end %>
</ul>
